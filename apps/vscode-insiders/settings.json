{
  "telemetry.feedback.enabled": false,
  "telemetry.telemetryLevel": "off",
  "gitlens.telemetry.enabled": false,
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font Mono, JetBrainsMono Nerd Font Mono, MesloLGL Nerd Font, CaskaydiaCove Nerd Font, Geist Mono, Menlo, Monaco, PT Mono",
  "workbench.colorTheme": "Houston",
  "editor.fontSize": 13,
  "totalTypeScript.hideAllTips": false,
  "totalTypeScript.hideBasicTips": false,
  "workbench.activityBar.location": "top",
  "eslint.ignoreUntitled": true,
  "git.autofetch": true,
  "github.copilot.enable": {
    "plaintext": true,
    "markdown": true,
    "scminput": true
  },
  "github.copilot.chat.localeOverride": "en",
  "gitlens.currentLine.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "github.copilot.chat.newWorkspace.useContext7": true,
  "githubRepositories.autoFetch.interval": 480,
  "githubRepositories.indexing.verboseDownloadNotification": false,
  "githubRepositories.lfs.read.enabled": false,
  "githubRepositories.lfs.write.enabled": false,
  "gitlens.plusFeatures.enabled": false,
  "vscode-edge-devtools.webhint": false,
  "simpleBrowser.focusLockIndicator.enabled": false,
  "extensions.closeExtensionDetailsOnViewChange": true,
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.shellIntegration.decorationsEnabled": "gutter",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiMagenta",
  "terminal.integrated.tabs.defaultIcon": "flame",
  "workbench.panel.showLabels": false,
  "terminal.integrated.cursorStyle": "underline",
  "terminal.integrated.cursorStyleInactive": "block",
  "terminal.integrated.hideOnLastClosed": false,
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.tabs.hideCondition": "never",
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.png": "imagePreview.previewEditor"
  },
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "chat.tools.terminal.autoApprove": {
    "pnpm lint": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm format --loglevel warn": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm add tailwindcss@^3.4.13 @tailwindcss/typography@^0.5.16 -D": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm install": {
      "approve": true,
      "matchCommandLine": true
    },
    "pnpm build": {
      "approve": true,
      "matchCommandLine": true
    }
  },
  // --- Security & integrity ---
  "extensions.verifySignature": false,
  "editor.linkedEditing": true,
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // --- Git improvements ---
  "git.pruneOnFetch": true,
  "git.untrackedChanges": "separate",
  "git.autoRepositoryDetection": true,

  // --- Search & explorer ---
  "search.useIgnoreFiles": true,
  "search.useGlobalIgnoreFiles": true,
  "explorer.compactFolders": false,

  // --- Workbench / editor management ---
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "github.copilot.chat.generateTests.codeLens": false,
  "editor.codeLens": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "MonoLisa , SF Mono, Hack, Menlo, Monaco, 'Courier New', monospace",
  "editor.inlayHints.enabled": "onUnlessPressed",
  "editor.minimap.enabled": false,
  "terminal.integrated.localEchoEnabled": "auto",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.suggest.inlineSuggestion": "alwaysOnTopExceptExactMatch",
  "chat.sendElementsToChat.enabled": false,
  "eslint.codeActionsOnSave.mode": "problems",
  "security.workspace.trust.enabled": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "workbench.commandPalette.experimental.suggestCommands": true
}
